@import "/components/noData/noData.wxss";
.scrollHead {
  position: fixed;
  left: 0;
  padding: 0rpx 36rpx;
  height: 100rpx;
  width: 100%;
  background: #ffffff;
  box-shadow: 0rpx 12rpx 12rpx 0rpx rgba(0, 13, 35, 0.04);
  z-index: 1;
}

.titleHead {
  white-space: nowrap;
}

.titleOne {
  font-size: 26rpx;
  color: #a6abb5;
  margin-right: 60rpx;
  margin-top: 30rpx;
  position: relative;
  display: inline-block;
}

.titleOne:last-child {
  margin-right: 0rpx;
}

.titleOne:nth-child(n+2)::before {
  content: '';
  width: 2rpx;
  height: 50rpx;
  background: rgba(0, 13, 35, .04);
  border-radius: 2rpx;
  position: absolute;
  left: -30rpx;
  top: -6rpx
}

.titleOneActive {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
  z-index: 1;
}

.titleOneActive::after {
  content: '';
  position: absolute;
  left: 2rpx;
  bottom: 6rpx;
  width: 100%;
  height: 8rpx;
  background: #0077cb;
  z-index: -1;
}

.solutionEngineer {
  padding: 128rpx 30rpx 28rpx;
}

.solutionEngineerOne {
  padding: 24rpx;
  /* height: 532rpx; */
  background: #ffffff;
  border-radius: 4rpx;
  box-shadow: 0rpx 6rpx 24rpx 0rpx rgba(0, 13, 35, 0.07);
  font-size: 30rpx;
  color: var(--colorOne);
  font-weight: bold;
  margin-bottom: 24rpx;
}

.solutionEngineerOne:last-child {
  margin-bottom: 0rpx;
}

.solutionEngineerOne>image {
  height: 364rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
}

.solutionEngineerOne>.pageviews {
  color: #a6abb5;
  font-size: 22rpx;
  margin-top: 14rpx;
  font-weight: normal;
}