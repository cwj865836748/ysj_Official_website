/* pages/cardDetail/cardDetail.wxss */
.card {
  padding: 40rpx 30rpx 0;
}

.cardDetail {
  border-radius: 4rpx;
  box-shadow: 0rpx 6rpx 24rpx 0rpx rgba(0, 13, 35, 0.07);
  overflow: hidden;
  margin-bottom: 56rpx;
  height: 868rpx;
}

.cardDetail>image {
  height: 520rpx;
}

.cardDesc {
  background: #fff;
  padding: 34rpx 30rpx 0;
  color: var(--colorOne);
  font-size: 26rpx;
}

.cardName {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.cardPhoneCode {
  font-size: 24rpx;
  color: #a6abb5;
  margin-top: 20rpx;
}

.cardPhoneCode>.code {
  width: 144rpx;
  height: 144rpx;
  background: black
}
.cardPhoneCode>.code>image {
  width: 100%;
  height:100%;
}
.phoneDetail {
  font-size: 32rpx;
  color: #0077cb;
  text-decoration: underline;
  margin-top: 6rpx;
  font-weight: bold;
}

.saveBtn {
  background: #0077cb;
  border-radius: 8rpx;
  height: 86rpx;
  font-size: 34rpx;
  color: #ffffff;
  font-weight: bold;
}